{
    "id": "nu.baretta.tplink",
    "name": {
        "en": "TP Link HS100/HS110/HS200 Smart wall plug"
    },
    "version": "0.0.1",
    "compatibility": "1.x",
    "author": {
        "name": "Anne Baretta",
        "email": "dev@baretta.nu"
    },
    "images": {
      "large": "./assets/images/large.jpg",
      "small": "./assets/images/small.jpg"
    },
    "category": "appliances",
    "description": {
      "en": "TP Link HS100/HS110/HS200 Smart wall plug app for Homey",
      "nl": "TP Link HS100/HS110/HS200 Smart wall plug app voor Homey"
    },
    "dependencies": {
    		"net": "*"
    },
    "capabilities": { 
    "ledonoff": {
	"type": "boolean",
            "title": {
                "en": "Switch LED on/off",
                "nl": "Zet LED aan/uit"
            },
            "getable": true,
            "setable": true
	}
    },
    "drivers": [
      {
          "id": "hs110",
          "name": {
              "en": "TP Link smart wall plug",
              "nl": "TP Link smart wall plug"
          },
          "images": {
              "large": "drivers/hs110/assets/images/large.jpg",
              "small": "drivers/hs110/assets/images/small.jpg"
          },
	"class": "socket",
		"capabilities": [ "onoff", "measure_power", "meter_power", "measure_current", "measure_voltage" ],
                   "mobile": {
	           "components": [
	              {
		                "id": "icon",
		                "capabilities": ["onoff"]
		         }, {
                                "id": "sensor",
                                "capabilities": [
                                "meter_power",
                                "measure_power",
                                "measure_current",
                                "measure_voltage"
                                ]
                        }, {
                                "id": "toggle",
                                "capabilities": [ "onoff" ]
		        }]
          },
          "pair": [
            {
              "id": "start"
            },
            {
              "id": "list_devices",
              "template": "list_devices",
              "navigation": {
                  "next": "add_plugs"
              }
            },
            {
              "id": "add_plugs",
              "template": "add_devices"
            }
          ],
          "settings": [
            {
              "type": "group",
                      "label": {
                          "en": "General settings",
                          "nl": "Algemene instellingen"
                      },
                      "children": [
                          {
                              "id": "settingIPAddress",
                              "type": "text",
                              "label": {
                                  "en": "IP address",
                                  "nl": "IP adres"
                              },
                              "value": "0.0.0.0"
                          }
                      ]
            }
          ]
      }
    ],
    "flow": {
        "actions": [
	{
            "id": "ledOn",
            "title": {
                "en": "Turn LED on",
                "nl": "Zet LED aan"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select smartplug",
                  "nl": "Selecteer smartplug"
                },
                "filter": "driver_id=hs110"
              }
            ]
        },
	{
            "id": "ledOff",
            "title": {
                "en": "Turn LED off",
                "nl": "Zet LED uit"
            },
            "args": [
              {
                "name": "device",
                "type": "device",
                "placeholder": {
                  "en": "Select smartplug",
                  "nl": "Selecteer smartplug"
                },
                "filter": "driver_id=hs110"
              }
            ]
        }
	]
    }
}
